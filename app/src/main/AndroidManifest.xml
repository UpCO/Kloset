<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upco.kloset">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:name=".contract.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">

        <!-- MainActivity -->
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LookActivity -->
        <activity android:name=".view.activity.LookActivity" />

        <!-- NewLookActivity -->
        <activity android:name=".view.activity.NewLookActivity" />

        <!-- NewLookItemActivity -->
        <activity android:name=".view.activity.NewLookItemActivity" />

        <!-- CommentActivity -->
        <activity android:name=".view.activity.CommentActivity" />

        <!-- AnswerActivity -->
        <activity android:name=".view.activity.AnswerActivity" />
    </application>
</manifest>
